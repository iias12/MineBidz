            @Html.LabelFor(m => m.CompanyInfo.PostalCode, "Zip/Postal Code")
            @Html.TextBoxFor(m => m.CompanyInfo.PostalCode, new { @style = "width:120px" })
        </div>
        <div style="float: left; padding-left: 10px">
