@model List<MineBidz.Models.RequestInfoListViewModel>

@{
    ViewBag.Title = "MineBidz - Connecting Mines with Suppliers, Vendors & Engineers";
}

<img class="w3-hide-small w3-hide-medium" style="width: 100%; height: 100%" src = "@Url.Content("../Images/home-header.png")"/>
<div class="w3-row">
    <a href="@Url.Action("Forms", "Home")" style="height:73%">
        <img style="width:27%; height:27%; padding-left:1%; padding-top:1%" src='@Url.Content("~/Images/post-request.png")' alt="" /></a>
    <img style="float: right; height: 73%; width: 73%" src = "@Url.Content("../Images/current-bid-requests.png")"/>
</div>

<div class="w3-responsive">
    <table class="w3-table-all">
        <thead>
            <tr class="w3-gray">
                <th>Condition</th>
                <th>Title</th>
                <th>Category</th>
                <th>Location
                </th>
                <th>Bid ID</th>
                <th>Posted</th>
                <th>Ends</th>
            </tr>
        </thead>
        @foreach (MineBidz.Models.RequestInfoListViewModel f in Model)
        {
            <tr class="w3-hover-black" style="cursor:pointer" onclick="redirect(@f.RequestInfoId)">
                <td>
                    @if (!String.IsNullOrEmpty(f.Condition))
                    {
                        @f.Condition
                    }
                </td>
                <td>
                    @if (!String.IsNullOrEmpty(f.BidName))
                    {
                        @f.BidName
                    }
                </td>
                <td>@f.Category</td>
                <td>@String.Format("{0}, {1}", f.Country, f.Location)</td>
                <td>@f.RefNumber</td>
                <td>@f.BidStart</td>
                <td>@f.BidEnd
            </tr>
        }
    </table>
</div>

<script type="text/javascript">
    function redirect(id) {
        var url = '@Url.Action("Display", "Forms", new {formId = "__id__"})';
        window.location.href = url.replace('__id__', id);
    }
</script>


