@model MineBidz.Models.CreateFormAdrViewModel
<fieldset>
    <legend>@Model.FormTitle</legend>
    <div class="createForm">
        <div>
            @Html.Label("", "Product Type (ie. Gold etc...)")
            @Html.TextBox("DetailsInfo.ProductType", "", new { @style = "width:250px" })
        </div>
        <div>
            @Html.Label("", "Metallurgical Test Work", new { @style = "width:180px" })
            @Html.Label("", "Yes", new { @style = "float:left; width:20px" })
            @Html.RadioButton("DetailsInfo.MetallurgicalTestWork", "Yes", new { @style = "float:left; width:35px" })
            @Html.Label("", "No", new { @style = "float:left; width:20px; padding-left:30px" })
            @Html.RadioButton("DetailsInfo.MetallurgicalTestWork", "No", new { @style = "float:left; width:35px" })
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Flow GPM")
            @Html.TextBox("DetailsInfo.FlowGPM")
        </div>
        <div>
            @Html.Label("", "Carbon Column Solution Feed Grade (Gold)")
            @Html.TextBox("DetailsInfo.CarbonColumnSolutionFeedGradeGold")
            @Html.DropDownList("DetailsInfo.CarbonColumnSolutionFeedGradeGoldUnit", new SelectList(Model.Repository.ListCarbonColumnSolutionFeedGradeUnit()))
        </div>
        <div>
            @Html.Label("", "Carbon Column Solution Feed Grade (Silver)")
            @Html.TextBox("DetailsInfo.CarbonColumnSolutionFeedGradeSilver")
            @Html.DropDownList("DetailsInfo.CarbonColumnSolutionFeedGradeSilverUnit", new SelectList(Model.Repository.ListCarbonColumnSolutionFeedGradeUnit()))
        </div>
    </div>
    @{Html.RenderPartial("PartialCreateMotor");}
    @{Html.RenderPartial("PartialCreateTankScreenCommon");}
</fieldset>

