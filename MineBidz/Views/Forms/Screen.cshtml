@model MineBidz.Models.CreateFormScreenViewModel

<fieldset>
    <legend>@Model.FormTitle</legend>
    <div class="createForm">
        <div>
            @Html.Label("DetailsInfo.SGSpecificGravity", "SG Specific Gravity")
            @Html.TextBox("DetailsInfo.SGSpecificGravity")
        </div>
        <div>
            @Html.Label("", "Product Type (ie. Gold etc...)")
            @Html.TextBox("DetailsInfo.ProductType", "", new { @style = "width:250px" })
        </div>
        <div>
            @Html.Label("", "Production Target")
            @Html.TextBox("DetailsInfo.ProductionTargetNumber")
            @Html.DropDownList("DetailsInfo.ProductionTargetUnit", new SelectList(new List<string>() { "", "TPH", "MTPH" }))
        </div>
        <div>
            @Html.Label("", "Metallurgical Test Work", new { @style = "width:180px" })
            @Html.Label("", "Yes", new { @style = "float:left; width:20px" })
            @Html.RadioButton("DetailsInfo.MetallurgicalTestWork", true, new { @style = "float:left; width:35px" })
            @Html.Label("", "No", new { @style = "float:left; width:20px; padding-left:30px" })
            @Html.RadioButton("DetailsInfo.MetallurgicalTestWork", false, new { @style = "float:left; width:35px" })
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Screen Type")
            @Html.DropDownList("DetailsInfo.ScreenType", new SelectList(new List<string>() { "", "Deck", "Trommel", "Other" }))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.ScreenTypeOther")
        </div>
        <div>
            @Html.Label("", "Motion Type")
            @Html.DropDownList("DetailsInfo.MotionType", new SelectList(Model.Repository.ListMotionType()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.MotionTypeOther")
        </div>
        <div>
            @Html.Label("", "%Moisture Content In Ore")
            @Html.TextBox("DetailsInfo.PercentMoistureContentInOre")
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Feed 80% Passing Expected (mm)")
            @Html.TextBox("DetailsInfo.Feed80PercentPassingExpectedMM")
        </div>
        <div>
            @Html.Label("", "Product 80% Passing Expected (mm)")
            @Html.TextBox("DetailsInfo.Product80PercentPassingExpectedMM")
        </div>
        <div>
            @Html.Label("", "Deck Type")
            @Html.DropDownList("DetailsInfo.DeckType", new SelectList(Model.Repository.ListDescType()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.DeckTypeOther")
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Dust Control")
            @Html.Label("", "Yes", new { @style = "float:left; width:25px" })
            @Html.RadioButton("DetailsInfo.DustControl", true, new { @style = "float:left; width:35px" })
            @Html.Label("", "No", new { @style = "float:left; width:25px; padding-left:30px" })
            @Html.RadioButton("DetailsInfo.DustControl", false, new { @style = "float:left; width:35px" })
        </div>
        <div>
            @Html.Label("", "Known Size of Screen Required")
            @Html.TextBox("DetailsInfo.KnownSizeOfScreenRequired1") X
                @Html.TextBox("DetailsInfo.KnownSizeOfScreenRequired2")
            @Html.DropDownList("DetailsInfo.KnownSizeOfScreenRequiredUnit", new SelectList(new List<string>() { "", "FT", "M" }))
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Motor Included in Quote")
            @Html.Label("", "Yes", new { @style = "float:left; width:25px" })
            @Html.RadioButton("DetailsInfo.MotorIncluded", true, new { @style = "float:left; width:35px" })
            @Html.Label("", "No", new { @style = "float:left; width:25px; padding-left:30px" })
            @Html.RadioButton("DetailsInfo.MotorIncluded", false, new { @style = "float:left; width:35px" })
        </div>
        <div>
            @Html.Label("", "Motor Voltage")
            @Html.TextBox("DetailsInfo.Motor.MotorVoltage")
        </div>
        <div>
            @Html.Label("", "Enclosure Type")
            @Html.TextBox("DetailsInfo.Motor.EnclosureType")
        </div>
        <div>
            @Html.Label("", "Phase")
            @Html.TextBox("DetailsInfo.Motor.Phase", "", new { @style = "width:50px" })
        </div>
        <div>
            @Html.Label("", "RPM Speed")
            @Html.TextBox("DetailsInfo.Motor.RpmSpeed")
        </div>
        <div>
            @Html.Label("", "Power HP")
            @Html.TextBox("DetailsInfo.Motor.PowerHP", "", new { @style = "width:70px" })
        </div>
        <div>
            @Html.Label("", "Project Elevation")
            @Html.TextBox("DetailsInfo.Motor.ProjectElevation")
            @Html.DropDownList("DetailsInfo.Motor.ProjectElevationUnit", new SelectList(new List<string> { "", "FT", "M" }))
        </div>
        <div>
            @Html.Label("", "Hertz")
            @Html.TextBox("DetailsInfo.Motor.Hertz", "", new { @style = "width:50px" })
        </div>
    </div>
</fieldset>





