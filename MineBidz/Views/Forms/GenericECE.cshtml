@model MineBidz.Models.CreateFormGenericECEViewModel

<fieldset>
    <legend>@Model.FormTitle</legend>
    <div class="createForm">
        <div>
            @Html.Label("", "Quantity (Each)")
            @Html.TextBox("DetailsInfo.QuantityEach")
        </div>
        <div>
            @Html.Label("", "Site Visit Required", new { @style = "width:180px" })
            @Html.Label("", "Yes", new { @style = "float:left; width:20px" })
            @Html.RadioButton("DetailsInfo.VisitSiteRequired", "Yes", new { @style = "float:left; width:35px" })
            @Html.Label("", "No", new { @style = "float:left; width:20px; padding-left:30px" })
            @Html.RadioButton("DetailsInfo.VisitSiteRequired", "No", new { @style = "float:left; width:35px" })
        </div>
    </div>
</fieldset>
