@model MineBidz.Models.DisplayBaseViewModel

@{Domain.Concrete.Screen detailsModel = Newtonsoft.Json.JsonConvert.DeserializeObject<Domain.Concrete.Screen>(Model.DetailsInfoJson);}
<fieldset>
    <legend>@String.Format("{0}/{1}/{2}", Model.Category, Model.Subcategory, Model.FormTitle)</legend>
    <div class="createForm">
        <div>
            @Html.Label("", "Delivery: Country - ", new { @style = "float:left" })
            @Html.Label("", Model.Contry, new { @style = "float:left; color:#000; margin-left:5px" })
            @Html.Label("", "Location - ", new { @style = "float:left; margin-left:5px" })
            @Html.Label("", Model.Location, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "SG Specific Gravity: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.SGSpecificGravity == null?"":detailsModel.SGSpecificGravity.ToString(), new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Product Type (ie. Gold etc...):", new { @style = "float:left" })
            @Html.Label("",detailsModel.ProductType, new { @style = "float:left; color:#000; margin-left:5px" })

        </div>
        <div>
            @Html.Label("", "Production Target: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.ProductionTargetNumber.ToString(), new { @style = "float:left; color:#000; margin-left:5px" })
            @Html.Label("",detailsModel.ProductionTargetUnit, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Metallurgical Test Work: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.MetallurgicalTestWork ? "Yes" : "No", new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Screen Type: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.ScreenType, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Other (Specify): ", new { @style = "float:left" })
            @Html.Label("",detailsModel.ScreenTypeOther, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Motion Type: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.MotionType, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Other (Specify): ", new { @style = "float:left" })
            @Html.Label("",detailsModel.MotionTypeOther, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "%Moisture Content In Ore: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.PercentMoistureContentInOre, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
    </div>
    <div class="createForm">

        <div>
            @Html.Label("", "Feed 80% Passing Expected (mm): ", new { @style = "float:left" })
            @Html.Label("",detailsModel.Feed80PercentPassingExpectedMM, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Product 80% Passing Expected (mm): ", new { @style = "float:left" })
            @Html.Label("",detailsModel.Product80PercentPassingExpectedMM, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Deck Type: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.DeckType, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Specify if 'Other': ", new { @style = "float:left" })
            @Html.Label("",detailsModel.DeckTypeOther, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>

    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Dust Control: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.DustControl ? "Yes" : "No", new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Known Size of Screen Required: ", new { @style = "float:left" })
            @Html.Label("",detailsModel.KnownSizeOfScreenRequired1, new { @style = "float:left; color:#000; margin-left:5px" })X
            @Html.Label("",detailsModel.KnownSizeOfScreenRequired2, new { @style = "float:left; color:#000; margin-left:5px" })
            @Html.Label("",detailsModel.KnownSizeOfScreenRequiredUnit, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
    </div>
    @{Html.RenderPartial("PartialDisplayMotorIncluded", detailsModel.MotorIncluded);}
    @{Html.RenderPartial("PartialDisplayMotor", detailsModel.Motor);}
    @{Html.RenderPartial("PartialDisplayCommon");}

</fieldset>

@{Html.RenderPartial("PartialDisplayPlaceBid");}
