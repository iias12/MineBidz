@model MineBidz.Models.DisplayBaseViewModel

<div>
    @if (Model.UserIsAuthenicated)
    {
        if (Model.UserCanBid)
        {
        @Html.RouteLink("Place a Bid", new { controller = "Bids", action = "Create", formId = Model.FormInfoId })
        }
        else
        {
        <div style="clear: both; padding-left: 20px; font-family: Verdana; font-size: x-large; font-weight: bold; color: #b15c0a">To be able to bid you have to request a bidding package</div>
        }
    }
    else
    {
        <div style="clear: both; padding-left: 20px; font-family: Verdana; font-size: x-large; font-weight: bold; color: #b15c0a">
            To be able to bid you have to &nbsp;
        @Html.ActionLink("Log in", "Login", "Account", routeValues: new { returnUrl = Request.Url.AbsoluteUri }, htmlAttributes: new { id = "loginLink" })
        </div>
    }
</div>
