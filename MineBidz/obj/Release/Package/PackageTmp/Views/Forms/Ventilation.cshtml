@model MineBidz.Models.CreateFormVentilationViewModel

<fieldset>
    <legend>@Model.FormTitle</legend>
    <div class="createForm">
        <div>
            @Html.Label("", "Tubing Type")
            @Html.DropDownList("DetailsInfo.TubingType", new SelectList(Model.Repository.ListTubingType()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.TubingTypeOther")
        </div>
        <div>
            @Html.Label("", "Length")
            @Html.TextBox("DetailsInfo.Length")
            @Html.DropDownList("DetailsInfo.LengthUnit", new SelectList(Model.Repository.ListLengthMetersFeet()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.LengthUnitOther")
        </div>
        <div>
            @Html.Label("", "Diameter")
            @Html.TextBox("DetailsInfo.Diameter")
            @Html.DropDownList("DetailsInfo.DiameterUnit", new SelectList(Model.Repository.ListLengthMetersInches()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.DiameterUnitOther")
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Quantity of Couplings (ea)")
            @Html.TextBox("DetailsInfo.CouplingsQuantity")
            @Html.DropDownList("DetailsInfo.CouplingsQuantityUnit", new SelectList(Model.Repository.ListCouplingsUnit()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.CouplingsQuantityUnitOther")
        </div>
        <div>
            @Html.Label("", "Quantity of Fans (ea)")
            @Html.TextBox("DetailsInfo.FansQuantity")
            @Html.DropDownList("DetailsInfo.FansQuantityUnit", new SelectList(new List<string>() { "", "Vaneaxial", "Centrifugal", "Other" }))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.FansQuantityUnitOther")
        </div>
        <div>
            @Html.Label("", "SCFM")
            @Html.TextBox("DetailsInfo.Scfm")
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Type")
            @Html.DropDownList("DetailsInfo.Type", new SelectList(new List<string>() { "", "Ramp", "Shaft", "Other" }))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.TypeOther")
        </div>
        <div>
            @Html.Label("", "Silencer")
            @Html.DropDownList("DetailsInfo.Silencer", new SelectList(new List<string>() { "", "Steel", "Flexible", "Other" }))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.SilencerOther")
        </div>
        <div>
            @Html.Label("", "Accessories")
            @Html.DropDownList("DetailsInfo.Accessories", new SelectList(Model.Repository.ListVentAccessories()))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.AccessoriesOther")
        </div>
    </div>
    <div class="createForm">
        <div>
            @Html.Label("", "Damper")
            @Html.DropDownList("DetailsInfo.Damper", new SelectList(new List<string>() { "", "Vaneaxial", "Centrifugal", "Other" }))
        </div>
        <div>
            @Html.Label("", "Specify if 'Other'")
            @Html.TextBox("DetailsInfo.DamperOther")
        </div>
        <div>
            @Html.Label("", "Heaters (# of btu)")
            @Html.TextBox("DetailsInfo.HeatersBtuNumber", "", new { @style = "float:left;" })
            @Html.Label("", "Yes", new { @style = "float:left; width:25px; padding-left:10px" })
            @Html.RadioButton("DetailsInfo.HeatersBtuNumberYesNo", true, new { @style = "float:left; width:30px" })
            @Html.Label("", "No", new { @style = "float:left; width:20px; padding-left:10px" })
            @Html.RadioButton("DetailsInfo.HeatersBtuNumberYesNo", false, new { @style = "float:left; width:30px" })
        </div>
        <div>
            @Html.Label("", "Air Conditioning (tons)")
            @Html.TextBox("DetailsInfo.AirConditioningTons", "", new { @style = "float:left;" })
            @Html.Label("", "Yes", new { @style = "float:left; width:25px; padding-left:10px" })
            @Html.RadioButton("DetailsInfo.AirConditioningTonsYesNo", true, new { @style = "float:left; width:30px" })
            @Html.Label("", "No", new { @style = "float:left; width:20px; padding-left:10px" })
            @Html.RadioButton("DetailsInfo.AirConditioningTonsYesNo", false, new { @style = "float:left; width:30px" })
        </div>
    </div>
    @{Html.RenderPartial("PartialCreateMotor");}
</fieldset>

