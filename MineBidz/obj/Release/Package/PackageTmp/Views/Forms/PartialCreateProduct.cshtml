@model MineBidz.Models.CreateFormViewModel

<div class="createForm">
    <div>
        @Html.Label("DetailsInfo.Product.SGSpecificGravity", "SG Specific Gravity")
        @Html.TextBox("DetailsInfo.Product.SGSpecificGravity")
    </div>
    <div>
        @Html.Label("", "Product Type (ie. Gold etc...)")
        @Html.TextBox("DetailsInfo.Product.ProductType", "", new { @style = "width:200px" })
    </div>
    <div>
        @Html.Label("", "Production Target")
        @Html.TextBox("DetailsInfo.Product.ProductionTargetNumber")
        @Html.DropDownList("DetailsInfo.Product.ProductionTargetUnit", new SelectList(new List<string>() { "TPH", "MTPH" }))
    </div>
    <div>
        @Html.Label("", "Metallurgical Test Work", new { @style = "width:180px" })
        @Html.Label("", "Yes", new { @style = "float:left; width:20px" })
        @Html.RadioButton("DetailsInfo.Product.MetallurgicalTestWork", "Yes", new { @style = "float:left; width:35px" })
        @Html.Label("", "No", new { @style = "float:left; width:20px; padding-left:30px" })
        @Html.RadioButton("DetailsInfo.Product.MetallurgicalTestWork", "No", new { @style = "float:left; width:35px" })
    </div>
</div>
