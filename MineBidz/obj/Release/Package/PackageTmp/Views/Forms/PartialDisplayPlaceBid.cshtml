@model MineBidz.Models.DisplayBaseViewModel

<div  class="companyInfo" style="clear: both; padding-left: 20px">
    @if (Model.UserIsAuthenicated)
    {
        if (Model.UserCanBid)
        {
            @Html.RouteLink("Submit a Quote", new { controller = "Bids", action = "Create", formId = Model.FormInfoId })
        }
        else
        {
            <div>To be able to bid you have to request a bidding package</div>
        }
    }
    else
    {
        <div>
            To be able to submit a quote you have to &nbsp;
            @Html.ActionLink("Log in", "Login", "Account", routeValues: new { returnUrl = Request.Url.AbsoluteUri }, htmlAttributes: new { id = "loginLink" })
        </div>
        <div>
            Or submit a quote as a &nbsp;
            @Html.RouteLink("Guest", new { controller = "Guest", action = "Create", formId = Model.FormInfoId })
        </div>
    }
</div>
