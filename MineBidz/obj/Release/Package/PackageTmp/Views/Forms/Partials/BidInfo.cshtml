@model MineBidz.Models.CreateFormViewModel

<div id="bidInfo" class="companyInfo">
    <fieldset>
        <legend>Quotation Info</legend>
        <div id="biddropdowns">
            <div>
                <div style="float: left">
                    @Html.LabelFor(m => m.CategoryId, "Category")
                    @Html.DropDownListFor(m => m.CategoryId, Model.Categories, "SELECT CATEGORY", new { id = "ddlCategory", @style = "width:190px; margin-left:5px" })
                </div>
                <div style="float: left">
                    @Html.LabelFor(m => m.SubCategoryId, "Subcategory")
                    @Html.DropDownListFor(m => m.SubCategoryId, Model.Subcategories, "SELECT SUBCATEGORY", new { id = "ddlSubcategory", @style = "width:190px; margin-left:5px" })
                </div>
                <div style="float: left">
                    @Html.LabelFor(m => m.EquipmentId, "Equipment")
                    @Html.DropDownListFor(m => m.EquipmentId, Model.RequestForms, "SELECT CATEGORY/SUBCATEGORY FIRST", new { id = "ddlRequestForm", @style = "width:200px; margin-left:5px", required = true, title = "Equipment is requried" })
                </div>
            </div>
        </div>
        <div id="bidMain" style="float: left; margin-top: 5px">
            <div id="bidtitle" style="float: left">
                <div style="float: left; padding-top: 5px">
                    @Html.LabelFor(m => m.BidInfo.BidName, "Title")
                    @Html.TextBoxFor(m => m.BidInfo.BidName)
                </div>
                <div style="float: left; margin-left: 5px; padding-top: 5px">
                    @Html.LabelFor(m => m.BidInfo.BidName, "Closing Date")
                    @Html.TextBoxFor(m => m.BidInfo.BidEndDate, new { @class = "datePickerBidEndDate", @Value = (Model.BidInfo.BidEndDate.Year == 1 ? "" : Model.BidInfo.BidEndDate.ToShortDateString()), @style = "width:100px" })
                </div>
            </div>
            <div id="conditions" style="float: left; margin-left: 30px;">
                <div style="float: left; margin-left: 15px; padding-top: 5px">
                    @Html.LabelFor(m => m.New, new { @style = "width:30px" })
                    @Html.CheckBoxFor(m => m.New)
                </div>
                <div style="float: left; margin-left: 15px; padding-top: 5px">
                    @Html.LabelFor(m => m.Used, new { @style = "width:35px;" })
                    @Html.CheckBoxFor(m => m.Used)
                </div>
                <div style="float: left; margin-left: 15px; padding-top: 5px">
                    @Html.LabelFor(m => m.Rental, new { @style = "width:45px" })
                    @Html.CheckBoxFor(m => m.Rental)
                </div>
            </div>
        </div>
        <div id="description" style="clear: both; padding-top: 5px">
            <fieldset>
                <legend></legend>
                <div style="margin-left: 10px; padding-top: 5px">Choose one of the following (<span style="color:red">Please do not include any logo’s or company information with quote request</span>)</div>
                <div style="margin-left: 5px">
                    <div style="float: left; padding-top: 5px">
                        @Html.Label("file", "File Upload:")
                        <input type="file" name="EngineeringDesign" id="EngineeringDesign" style="height: 25px" />
                    </div>
                    <div style="float: left; padding-top: 5px; width: 50%">
                        @Html.LabelFor(m => m.Description, "Additional information")
                        @Html.TextAreaFor(m => m.Description, new { @rows = "4", @style = "border: 1px solid; width:100%; min-width:220px; margin-left:5px" })
                    </div>
                </div>
            </fieldset>
        </div>
        <div style="clear: both; padding-top: 5px">
            <div style="float: left; margin-left: 10px">
                @Html.LabelFor(m => m.VendorCanContact, "Check if Vendor can contact you for additional information to better quote you:", new { @style = "float:left" })
                @Html.CheckBoxFor(m => m.VendorCanContact, new { @style = "float:left" })
            </div>
            <div style="float: left; margin-left: 10px">
                @Html.LabelFor(m => m.Acknowledged, "I agree with", new { @style = "float:left" })
                <a href="@Url.Content("~/Images/PDF/Terms of Service for Users REV1.pdf")" target="_blank" style="float:left; margin-left:5px">Terms and Conditions</a>
                @Html.CheckBoxFor(m => m.Acknowledged, new { @style = "float:left" })
            </div>
        </div>
    </fieldset>
</div>





