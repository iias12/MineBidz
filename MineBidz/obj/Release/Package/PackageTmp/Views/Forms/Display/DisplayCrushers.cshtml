@model MineBidz.Models.DisplayBaseViewModel

@{Domain.Concrete.Crushers detailsModel = Newtonsoft.Json.JsonConvert.DeserializeObject<Domain.Concrete.Crushers>(Model.DetailsInfoJson);}
<fieldset>
