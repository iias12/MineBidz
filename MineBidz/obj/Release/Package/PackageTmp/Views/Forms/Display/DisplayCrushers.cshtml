        <div>
            @Html.Label("", "Other(Specify): ", new { @style = "float:left" })
            @Html.Label("", detailsModel.TertiaryCrusherTypeOther, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
        <div>
            @Html.Label("", "Circuit Type: ", new { @style = "float:left" })
            @Html.Label("", detailsModel.CircuitType, new { @style = "float:left; color:#000; margin-left:5px" })
        </div>
